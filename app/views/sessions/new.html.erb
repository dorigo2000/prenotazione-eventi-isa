<div class="container mt-5" style="max-width: 500px;">
    <% if flash.now[:notice] %>
        <div class="alert alert-info text-center">
            <%= flash.now[:notice] %>
        </div>
    <% end %>
    <div class="border p-4 rounded">
        <h1 class="custom-title mb-3">EventHub</h1>
        <div class="mt-4">
            <% if flash.now[:alert] %>
                <div class="alert alert-danger">
                    <%= flash.now[:alert] %>
                </div>
            <% end %>
            <%= form_with model: @user, url: sign_in_path, data: { turbo: "false" } do |form| %>
                <div class="mb-3">
                    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
                </div>
                <div class="mb-3">
                    <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
                </div>
                <div class="mb-3">
                    <center>
                        <%= form.submit "Accedi", class:"btn btn-primary" %>
                    </center>
                </div>
            <% end %>
            <p class="text-center">Non hai ancora un account? <b><%= link_to "Iscriviti", sign_up_path, class: "nav-link text-primary d-inline" %></b></p>
        </div>
    </div>
</div>